    //Delete All
    $scope.deleteAll = function () {
        var r = confirm("Deleted all?");
        if (r == true) {
            $scope.selected.forEach(function (id) {
                var itemRef = firebase.database().ref().child('data/' + $scope.auth.uid + '/userToScan/' + id);
